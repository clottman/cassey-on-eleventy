<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta name="description" property="og:description" content="{{ social_description or description or metadata.social_description }}">
    <link rel="stylesheet" href="{{ '/css/prism-okaidia.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.url }}" type="application/rss+xml" title="{{ metadata.title }}">
    <link rel="shortcut icon" href="{{ favicon or metadata.favicon }}" type="image/x-icon">
    <link rel="icon" href="{{ favicon or metadata.favicon }}" type="image/x-icon">
    {% if raw_social_img %}
      {%- setAsync "processed_social_image" -%}
      {% imgFullUrl raw_social_img %}
      {%- endsetAsync -%}
    {% endif %}
    {%- set imgToUse = processed_social_image or social_image or metadata.social_image -%} <meta property="twitter:image" content="{{ imgToUse }}">
    <meta property="twitter:card" content="{{ twitter_card_style or metadata.twitter_card_style }}">
    <meta property="og:image:width" content="{{ social_image_width or metadata.social_image_width }}">
    <meta property="og:image:height" content="{{ social_image_height or metadata.social_image_height }}">
    <meta property="og:image" content="{{ imgToUse }}">
    <meta property="twitter:image:alt" content="{{ social_image_alt or metadata.social_image_alt }}">
    <meta name="fediverse:creator" content="@cassey@ottawa.place">
    <link href="https://fonts.googleapis.com/css2?family=Nunito&family=Open+Sans&display=swap" rel="stylesheet">
    <link rel="webmention" href="https://webmention.io/www.cassey.dev/webmention"/>
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body>
    <header class='site-header'>
      <div class="wrapper">
        <h1>
          <a class='site-title' href="{{ '/' | url }}">{{ metadata.title }}</a>
        </h1>
        <button aria-label="Toggle navigation" id="nav-toggle">
          <?xml version="1.0"?>
          <svg width="32px" height="32px" viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg">
            <g><path
                fill="var(--nav-toggle)"
                d="M16,31A15,15,0,1,1,31,16,15,15,0,0,1,16,31ZM16,3A13,13,0,1,0,29,16,13,13,0,0,0,16,3Z"/><path fill="var(--nav-toggle)" d="M21,17H11a1,1,0,0,1,0-2H21a1,1,0,0,1,0,2Z"/><path fill="var(--nav-toggle)" d="M21,12H11a1,1,0,0,1,0-2H21a1,1,0,0,1,0,2Z"/><path fill="var(--nav-toggle)" d="M21,22H11a1,1,0,0,1,0-2H21a1,1,0,0,1,0,2Z"/>
            </g>
          </svg>
        </button>
        <ul class="nav site-nav">
          {%- for nav in collections.sortedNav -%}
            <li {% if nav.url == page.url %} aria-current="page" {% endif %} class="nav-item{% if nav.url == page.url %} nav-item-active{% endif %}">
              <a href="{{ nav.url | url }}">{{ nav.data.navtitle }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    </header>
    <main class="page-content {{ wrapperClass }}">
      <div class="wrapper">
        <div class="inner-content-wrapper">
          {{ content | safe }}
        </div>
      </div>
    </main>
    <footer class="site-footer wrapper">
      <h2 class="footer-heading">{{ metadata.title }}</h2>
      <div class="footer-col-wrapper">
        <ul class="social-media-list">
          {% if metadata.author.github_username %}
            <li>
              <a rel="me" href="https://github.com/{{ metadata.author.github_username }}">
                <span class="icon icon--github">
                  <svg viewBox="0 0 16 16"><path
                      fill="#828282"
                      d="M7.999,0.431c-4.285,0-7.76,3.474-7.76,7.761
                        c0,3.428,2.223,6.337,5.307,7.363c0.388,0.071,0.53-0.168,0.53-0.374c0-0.184-0.007-0.672-0.01-1.32
                        c-2.159,0.469-2.614-1.04-2.614-1.04c-0.353-0.896-0.862-1.135-0.862-1.135c-0.705-0.481,0.053-0.472,0.053-0.472
                        c0.779,0.055,1.189,0.8,1.189,0.8c0.692,1.186,1.816,0.843,2.258,0.645c0.071-0.502,0.271-0.843,0.493-1.037
                        C4.86,11.425,3.049,10.76,3.049,7.786c0-0.847,0.302-1.54,0.799-2.082C3.768,5.507,3.501,4.718,3.924,3.65
                        c0,0,0.652-0.209,2.134,0.796C6.677,4.273,7.34,4.187,8,4.184c0.659,0.003,1.323,0.089,1.943,0.261
                        c1.482-1.004,2.132-0.796,2.132-0.796c0.423,1.068,0.157,1.857,0.077,2.054c0.497,0.542,0.798,1.235,0.798,2.082
                        c0,2.981-1.814,3.637-3.543,3.829c0.279,0.24,0.527,0.713,0.527,1.437c0,1.037-0.01,1.874-0.01,2.129
                        c0,0.208,0.14,0.449,0.534,0.373c3.081-1.028,5.302-3.935,5.302-7.362C15.76,3.906,12.285,0.431,7.999,0.431z"/>
                  </svg>
                </span>
                <span class="username">GitHub</span>
              </a>
            </li>
          {% endif %}
          {% if metadata.author.til %}
            <li>
              <a href="{{ metadata.author.til }}"><img
                  height='20'
                  width='20'
                  alt=""
                  src="https://cdn.glitch.com/238f8585-6bd5-40c4-a0ff-2b87d4acea6c%2Ftil-16.png?v=1561397433743"/>
                <span class="username">Today I Learned</span>
              </a>
            </li>
          {% endif %}
          <li>
            <a rel="me" href="https://ottawa.place/@cassey">
              <img height='20' width='20' alt="" src="/img/mastodon.png" " /><span class=" username">Mastodon</span>
            </a>
          </li>
        </ul>
        <p>{{ metadata.description | markdownify | stripPs }}</p>
      </div>
      <p>
        <a href="https://buttondown.email/updates-from-cassey">Sign up for email updates.</a>
      </p>
      <p>
        <a href="https://www.cassey.dev/feed/feed.xml">Add my RSS feed to your feed reader.</a>
      </p>
    </div>
  </footer>
  <script>
    (function () {
      var toggle = document.querySelector('#nav-toggle');
      toggle.addEventListener('click', function (e) {
        var nav = document.querySelector('.nav');
        nav.classList.toggle('visible');
      });
    })();
  </script>
  <script type="module" defer>
    const snow = document.createElement('snow-fall');
    document.body.prepend(snow)
  </script>
  <script>
    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", user => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
</body></html>
